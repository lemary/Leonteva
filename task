#include <iostream>
#include <vector>

int64_t FindMinHeight(size_t n, size_t k) {
    if (n == 0) {
        return 0;
    }
    if (k == 0) {
        return -1;
    }
    int64_t height = 0;
    std::vector<int64_t> dp(k + 1, 0);
    while (dp[k] < n) {
        for (size_t x = k; x != 0; --x) {
            dp[x] += dp[x - 1] + 1;
        }
        ++height;
    }
    return height;
}

int main() {
    size_t n, k;
    std::cin >> n >> k;
    std::cout << FindMinHeight(n - 1, k) << std::endl;
    return 0;
}
