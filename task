#include <iostream>
#include <vector>
using namespace std;

class Solver {
 public:
  int64_t Solve(uint32_t n, uint32_t k) {
    if (n == 0) {
      return 0;
    }
    if (k == 0) {
      return -1;
    }
    int64_t ans = 0;
    std::vector<int64_t> dp(k + 1, 0);
    for (; dp[k] < n; ++ans) {
      for (uint32_t x = k; x != 0; --x) {
        dp[x] += dp[x - 1] + 1;
      }
    }
    return ans;
  }
};

int main() {
  uint32_t n, k;
  std::cin >> n >> k;
  std::cout << Solver().Solve(n - 1, k) << std::endl;
  return 0;
}
